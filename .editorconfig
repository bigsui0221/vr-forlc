# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# 所有文件
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript/TypeScript/Vue文件
[*.{js,ts,vue,json}]
indent_size = 2
max_line_length = 120

# CSS/SCSS文件
[*.{css,scss,less}]
indent_size = 2

# HTML文件
[*.html]
indent_size = 2

# Markdown文件
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# package.json
[package.json]
indent_size = 2 